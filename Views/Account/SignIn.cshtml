@using Microsoft.AspNetCore.Identity;
@model style_catalog.Models.Account;
@inject UserManager<Account> UserManager;

@section css{
  <link rel="stylesheet" href="~/css/Account/account.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/Account/login.css" asp-append-version="true" />      
}

<div class="container">
  <h1>Account Sign in</h1>

  <form asp-action="Login">
    <div class="group"
         class="validation-summary"
          asp-validation-summary="All" 
          class="text-danger">
    </div>        
    <div class="group">
      <label asp-for="UserName" class="control-label">
        @Html.Label("Username:")
      </label>
      <input asp-for="UserName" class="form-control" />
    </div>
    <div class="group">
      <label asp-for="Password" class="control-label">
        @Html.Label("Password:")
      </label>
      <input asp-for="Password" class="form-control" />
    </div>
    <input type="submit" value="Sign In" class="account-submit" id="login"/>
  </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}